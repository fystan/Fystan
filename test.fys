// Function to calculate factorial recursively
fn factorial(n) {
    if (n == 0) {
        return 1;
    } else {
        return n * factorial(n - 1);
    }
}

// Function with a while loop
fn countdown(start) {
    let i = start;
    while (i > 0) {
        print(i);
        i = i - 1;
    }
    print("Blast off!");
}

// Main part of the script
